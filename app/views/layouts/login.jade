doctype html
html
	include ../includes/head

	block vars

	- if (subText === undefined)
		- subText = 'Oops'

	body
		div(class="l-container")
			include ../includes/header

			.page-content
				form.form--login
					label Enter Your Twitter username:
						input(class='control--username' name='username')
					input.btn.control--submit(type="submit")

				.loading.isHidden

				video.cameraWindow.isHidden
				canvas.photoWindow.isHidden
				img.photo.isHidden

			include ../includes/footer

	include ../includes/foot